<div class="body">
    <h2 class="other-font text-3xl tablet:text-4xl laptop:text-6xl">COMPRA AHORA	</h2>
    <article>
        <p>
            Lorem ipsum dolor sit 
            onsectetur, adipielit.
        </p>
    </article>
    <div class="container-items">
        {
        PRODUCTOS.map(({image, title, price, description, }) => (
        <div class="item">
            <figure>
                <img
                    src={image}
                    alt={description}
                />
            </figure>
            <div class="info-product">
                <h2>{title}</h2>
                <p class="price">${price}</p>
                <button class="btn-add-cart"
